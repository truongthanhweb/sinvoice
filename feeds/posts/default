                                                  &lt;td rowspan=&quot;2&quot; style=&quot;text-align: center; vertical-align: middle;&quot;&gt;
                                                      Tặng 33 tháng sử dụng vBHXH
                                                  &lt;/td&gt;
                                                  &lt;td style=&quot;text-align: right; vertical-align: middle;&quot;&gt;
                                                        &lt;span style=&quot;text-decoration: line-through;&quot;&gt;2.191.000đ&lt;/span&gt;
                                                    &lt;/td&gt;
                                              &lt;/tr&gt;
                                            &lt;tr&gt;
                                                  &lt;td style=&quot;text-align: right;&quot;&gt;&lt;span class=&quot;color-primary&quot;&gt;1.900.000đ&lt;/span&gt;&lt;/td&gt;
                                            &lt;/tr&gt;
                                             &lt;tr&gt;
                                                  &lt;td rowspan=&quot;2&quot; style=&quot;vertical-align: middle;&quot;&gt;
                                                      3
                                                  &lt;/td&gt;
                                                
                                                  &lt;td rowspan=&quot;2&quot; style=&quot;text-align: left;&quot;&gt;Gia hạn chữ ký số USB token 3 năm&lt;/td&gt;
                                                  &lt;td rowspan=&quot;2&quot; style=&quot;text-align: center; vertical-align: middle;&quot;&gt;
                                                      Tặng thêm 12 tháng sử dụng. Tổng là 48 tháng.
                                                  &lt;/td&gt;
                                                  &lt;td rowspan=&quot;2&quot; style=&quot;text-align: center; vertical-align: middle;&quot;&gt;
